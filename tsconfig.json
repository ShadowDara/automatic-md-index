{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "moduleDetection": "force"
    },
    "include": [
        "src"
    ],
    "ts-node": {
        "esm": true
    }
}
